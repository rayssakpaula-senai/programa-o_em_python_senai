# Cadastro de clientes
cliente1_nome = input("Digite o nome do cliente 1: ")
cliente1_idade = int(input("Digite a idade do cliente 1: "))

cliente2_nome = input("Digite o nome do cliente 2: ")
cliente2_idade = int(input("Digite a idade do cliente 2: "))

cliente3_nome = input("Digite o nome do cliente 3: ")
cliente3_idade = int(input("Digite a idade do cliente 3: "))

# Preços dos quartos
preco_simples = 100.00
preco_duplo = 150.00
preco_luxo = 250.00

# Cadastro das escolhas de quartos
# Cliente 1
print("\nCliente 1 - Escolha do quarto:")
print("1 - Simples (R$ 100,00 por dia)")
print("2 - Duplo (R$ 150,00 por dia)")
print("3 - Luxo (R$ 250,00 por dia)")
cliente1_quarto = int(input("Escolha o número do quarto para o cliente 1 (1, 2 ou 3): "))

# Cliente 2
print("\nCliente 2 - Escolha do quarto:")
print("1 - Simples (R$ 100,00 por dia)")
print("2 - Duplo (R$ 150,00 por dia)")
print("3 - Luxo (R$ 250,00 por dia)")
cliente2_quarto = int(input("Escolha o número do quarto para o cliente 2 (1, 2 ou 3): "))

# Cliente 3
print("\nCliente 3 - Escolha do quarto:")
print("1 - Simples (R$ 100,00 por dia)")
print("2 - Duplo (R$ 150,00 por dia)")
print("3 - Luxo (R$ 250,00 por dia)")
cliente3_quarto = int(input("Escolha o número do quarto para o cliente 3 (1, 2 ou 3): "))

# Quantidade de dias de estadia
cliente1_dias = int(input(f"\nQuantos dias {cliente1_nome} ficará no hotel? "))
cliente2_dias = int(input(f"Quantos dias {cliente2_nome} ficará no hotel? "))
cliente3_dias = int(input(f"Quantos dias {cliente3_nome} ficará no hotel? "))

# Cálculo do valor das estadias

# Cliente 1
if cliente1_quarto == 1:
    valor_cliente1 = preco_simples * cliente1_dias
elif cliente1_quarto == 2:
    valor_cliente1 = preco_duplo * cliente1_dias
elif cliente1_quarto == 3:
    valor_cliente1 = preco_luxo * cliente1_dias
else:
    valor_cliente1 = 0  # Caso o cliente escolha uma opção inválida

# Cliente 2
if cliente2_quarto == 1:
    valor_cliente2 = preco_simples * cliente2_dias
elif cliente2_quarto == 2:
    valor_cliente2 = preco_duplo * cliente2_dias
elif cliente2_quarto == 3:
    valor_cliente2 = preco_luxo * cliente2_dias
else:
    valor_cliente2 = 0  # Caso o cliente escolha uma opção inválida

# Cliente 3
if cliente3_quarto == 1:
    valor_cliente3 = preco_simples * cliente3_dias
elif cliente3_quarto == 2:
    valor_cliente3 = preco_duplo * cliente3_dias
elif cliente3_quarto == 3:
    valor_cliente3 = preco_luxo * cliente3_dias
else:
    valor_cliente3 = 0  # Caso o cliente escolha uma opção inválida

# Exibição do valor total a ser pago por cada cliente

print(f"\nResumo da reserva:")

# Cliente 1
if valor_cliente1 > 0:
    print(f"{cliente1_nome} escolheu o quarto ", end="")
    if cliente1_quarto == 1:
        print("Simples.")
    elif cliente1_quarto == 2:
        print("Duplo.")
    elif cliente1_quarto == 3:
        print("Luxo.")
    print(f"Total a pagar: R$ {valor_cliente1:.2f}")
else:
    print(f"{cliente1_nome} fez uma escolha inválida de quarto!")

# Cliente 2
if valor_cliente2 > 0:
    print(f"{cliente2_nome} escolheu o quarto ", end="")
    if cliente2_quarto == 1:
        print("Simples.")
    elif cliente2_quarto == 2:
        print("Duplo.")
    elif cliente2_quarto == 3:
        print("Luxo.")
    print(f"Total a pagar: R$ {valor_cliente2:.2f}")
else:
    print(f"{cliente2_nome} fez uma escolha inválida de quarto!")

# Cliente 3
if valor_cliente3 > 0:
    print(f"{cliente3_nome} escolheu o quarto ", end="")
    if cliente3_quarto == 1:
        print("Simples.")
    elif cliente3_quarto == 2:
        print("Duplo.")
    elif cliente3_quarto == 3:
        print("Luxo.")
    print(f"Total a pagar: R$ {valor_cliente3:.2f}")
else:
    print(f"{cliente3_nome} fez uma escolha inválida de quarto!")
