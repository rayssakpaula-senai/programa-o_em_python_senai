# FunÃ§Ã£o para exibir charada, alternativas e verificar resposta
def jogar_charada():
    for charada, dados in charadas_com_alternativas.items():
        print(f"\nCharada: {charada}")
        
        # Embaralha as alternativas, mas mantÃ©m a resposta correta
        alternativas = dados["alternativas"]
        alternativas_copia = alternativas[:]
        random.shuffle(alternativas_copia)

        # Exibe as alternativas embaralhadas
        for i, alternativa in enumerate(alternativas_copia, 1):
            print(f"{i}. {alternativa}")
        
        # Pede a resposta do usuÃ¡rio
        try:
            resposta_usuario = int(input("\nEscolha a alternativa (1, 2, 3, ou 4): "))
            
            # Verifica se a escolha estÃ¡ entre 1 e 4
            if resposta_usuario not in [1, 2, 3, 4]:
                print("NÃºmero invÃ¡lido! Escolha entre 1 e 4.")
                continue

            # ObtÃ©m a resposta escolhida pelo usuÃ¡rio
            resposta_escolhida = alternativas_copia[resposta_usuario - 1]

            # Verifica se a resposta estÃ¡ correta
            if resposta_escolhida == dados["resposta_correta"]:
                print("Resposta correta! ğŸ‰")
            else:
                print(f"Resposta errada! A resposta correta Ã©: {dados['resposta_correta']}")
        
        except ValueError:
            print("Por favor, digite um nÃºmero vÃ¡lido entre 1 e 4.")

# Iniciar o jogo de charadas
jogar_charada()


