#1
numero = int(input("Digite um número: "))

match numero % 2:
    case 0: 
        print("O número é par.")
    case _: 
        print("O número é ímpar.")

#2
numero = float(input("Digite um número: "))

match numero:
    case _ if numero > 0: 
        print("O número é positivo.")
    case _ if numero < 0: 
        print("O número é negativo.")
    case _: 
        print("O número é zero.")

#3
texto = input("Digite um texto: ")

match texto.strip():
    case "": 
        print("A string está vazia.")
    case _: 
        print("A string não está vazia.")

#4
idade = int(input("Digite sua idade: "))

match idade:
    case _ if idade < 16:
        print("Você ainda não pode votar.")
    case _ if 16 <= idade < 18 or idade > 70:
        print("O voto é opcional.")
    case _:
        print("O voto é obrigatório.")

#5
nota = float(input("Digite sua nota (0 a 10): "))

match nota:
    case _ if nota >= 9:
        print("Excelente!")
    case _ if 7 <= nota < 9:
        print("Bom desempenho.")
    case _ if 5 <= nota < 7:
        print("Regular, precisa melhorar.")
    case _:
        print("Reprovado.")

#6
dia = input("Digite o dia da semana: ").lower()

match dia:
    case "segunda" | "terça" | "quarta" | "quinta" | "sexta":
        print("É dia útil.")
    case "sábado" | "sabado" | "domingo":
        print("É fim de semana.")
    case _:
        print("Dia inválido digitado.")

#7
temperatura = float(input("Digite a temperatura atual em °C: "))

match temperatura:
    case _ if temperatura < 15:
        print("Está frio.")
    case _ if 15 <= temperatura < 30:
        print("Clima agradável.")
    case _:
        print("Está calor!")
